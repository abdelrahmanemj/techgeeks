/* ==========================================
   TechGeeks Computer Science Club Stylesheet
   Based on UI Design Screenshot
   ========================================== */

/* CSS Variables */
:root {
    /* Brand Colors */
    --primary-navy: #1B1E3C;
    --primary-blue: #0073B7;
    --primary-pink: #EA5B7C;
    --primary-orange: #F7931E;
    --teal: #14B8A6;

    /* Neutral Colors */
    --white: #FFFFFF;
    --off-white: #FAFBFC;
    --light-gray: #F8F9FA;
    --text-dark: #1B1E3C;
    --text-gray: #6B7280;
    --border-gray: #E5E7EB;

    /* Typography */
    --font-family: 'Outfit', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.5rem;
    --font-size-2xl: 2rem;
    --font-size-3xl: 2.5rem;
    --font-size-4xl: 3.5rem;
    --font-size-5xl: 4.5rem;

    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 3rem;
    --spacing-xl: 5rem;
    --spacing-2xl: 8rem;

    /* Shadows */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07);
    --shadow-lg: 0 10px 20px rgba(0, 0, 0, 0.1);

    /* Border Radius */
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-full: 9999px;

    /* Transitions */
    --transition: 0.3s ease;
}

/* ==========================================
   Reset & Base
   ========================================== */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    font-size: 16px;
}

body {
    font-family: var(--font-family);
    font-size: var(--font-size-base);
    line-height: 1.6;
    color: var(--text-dark);
    background-color: var(--white);
    overflow-x: hidden;
}

/* ==========================================
   Typography
   ========================================== */

h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--primary-navy);
}

p {
    line-height: 1.7;
    color: var(--text-gray);
}

a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition);
}

ul {
    list-style: none;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

/* ==========================================
   Container
   ========================================== */

.container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
}

/* ==========================================
   Navigation
   ========================================== */

.navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
}

.nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
}

.logo img {
    height: 45px;
}

.nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
}

.nav-link {
    font-weight: 600;
    font-size: var(--font-size-sm);
    color: var(--text-dark);
    padding: 0.5rem 0;
    position: relative;
}

.nav-link:hover,
.nav-link.active {
    color: var(--primary-blue);
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary-blue);
    transition: var(--transition);
}

.nav-link:hover::after,
.nav-link.active::after {
    width: 100%;
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
}

.mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--primary-navy);
    border-radius: 2px;
    transition: var(--transition);
}

/* ==========================================
   Buttons
   ========================================== */

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 2rem;
    font-weight: 600;
    font-size: var(--font-size-sm);
    border-radius: var(--radius-full);
    cursor: pointer;
    border: none;
    transition: var(--transition);
    text-align: center;
}

.btn-primary {
    background: var(--primary-navy);
    color: var(--white);
    box-shadow: var(--shadow-md);
}

.btn-primary:hover {
    background: #0F1221;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.btn-secondary {
    background: var(--white);
    color: var(--primary-navy);
    border: 2px solid var(--primary-navy);
}

.btn-secondary:hover {
    background: var(--primary-navy);
    color: var(--white);
}

/* ==========================================
   Hero Section - Clean White Design
   ========================================== */

.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding-top: 80px;
    background: var(--white);
    overflow: hidden;
}

/* Flowing curved lines decoration */
.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('techgeeks logo and visual/background.png');
    background-size: cover;
    background-position: center;
    opacity: 0.08;
    z-index: 0;
}

.hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    padding: var(--spacing-lg) 0;
}

.hero-logo {
    margin-bottom: var(--spacing-md);
}

.hero-logo img {
    height: 120px;
    margin: 0 auto;
}

.hero-subtitle {
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-gray);
    margin-bottom: var(--spacing-md);
}

.hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--primary-navy);
    color: var(--white);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    margin-bottom: var(--spacing-lg);
}

.hero-badge svg {
    width: 14px;
    height: 14px;
}

.hero-title {
    font-size: var(--font-size-5xl);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--spacing-md);
    color: var(--primary-navy);
}

.hero-title-highlight {
    position: relative;
    display: inline-block;
}

.hero-title-highlight.orange {
    color: var(--primary-orange);
}

.hero-title-highlight.teal {
    color: var(--teal);
}

.hero-description {
    font-size: var(--font-size-lg);
    color: var(--text-gray);
    max-width: 700px;
    margin: 0 auto var(--spacing-lg);
    line-height: 1.8;
}

.hero-buttons {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
}

.hero-visual {
    margin-top: var(--spacing-lg);
    width: 100%;
}

.scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
}

.mouse {
    width: 24px;
    height: 40px;
    border: 2px solid var(--text-gray);
    border-radius: 20px;
    position: relative;
}

.wheel {
    width: 3px;
    height: 8px;
    background: var(--text-gray);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll 1.5s infinite;
}

@keyframes bounce {
    0%, 100% {
        transform: translateX(-50%) translateY(0);
    }
    50% {
        transform: translateX(-50%) translateY(-10px);
    }
}

@keyframes scroll {
    0% {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
    }
    100% {
        opacity: 0;
        transform: translateX(-50%) translateY(10px);
    }
}

/* ==========================================
   Sections
   ========================================== */

.section {
    padding: var(--spacing-2xl) 0;
}

.section-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.section-title {
    font-size: var(--font-size-4xl);
    font-weight: 800;
    color: var(--primary-navy);
    margin-bottom: var(--spacing-sm);
}

.section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--text-gray);
}

/* ==========================================
   About Section
   ========================================== */

.about {
    background: var(--light-gray);
}

.about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: center;
}

.about-text h3 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-sm);
}

.about-text p {
    font-size: var(--font-size-lg);
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
}

.about-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
}

.stat-item {
    text-align: center;
    padding: var(--spacing-md);
    background: var(--white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
}

.stat-number {
    font-size: var(--font-size-4xl);
    font-weight: 800;
    color: var(--primary-blue);
}

.stat-label {
    font-size: var(--font-size-sm);
    color: var(--text-gray);
    font-weight: 600;
}

.about-visual {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
}

.visual-item {
    background: var(--white);
    padding: var(--spacing-lg);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
}

.visual-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
}

.visual-icon {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
}

.visual-item h4 {
    font-size: var(--font-size-lg);
    margin-bottom: 0.5rem;
}

.visual-item p {
    font-size: var(--font-size-sm);
    color: var(--text-gray);
}

/* ==========================================
   Activities Section
   ========================================== */

.activities {
    background: var(--white);
}

.activities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-lg);
}

.activity-card {
    background: var(--white);
    padding: var(--spacing-lg);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-gray);
    transition: var(--transition);
}

.activity-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-blue);
}

.activity-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--icon-color) 0%, var(--icon-color) 100%);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-md);
    color: var(--white);
}

.activity-icon svg {
    width: 28px;
    height: 28px;
}

.activity-card h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-sm);
}

.activity-card p {
    color: var(--text-gray);
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
}

.activity-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.activity-tags li {
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    background: var(--light-gray);
    color: var(--text-dark);
}

/* ==========================================
   Join Section
   ========================================== */

.join-us {
    background: var(--light-gray);
}

.join-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
}

.join-info h3 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-md);
}

.benefits-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.benefits-list li {
    display: flex;
    gap: var(--spacing-sm);
    padding: var(--spacing-md);
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
}

.benefit-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
}

.benefits-list strong {
    display: block;
    font-weight: 700;
    color: var(--primary-navy);
    margin-bottom: 0.25rem;
}

.benefits-list p {
    font-size: var(--font-size-sm);
    color: var(--text-gray);
}

.join-form-container {
    background: var(--white);
    padding: var(--spacing-lg);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
}

.join-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-group label {
    font-weight: 600;
    font-size: var(--font-size-sm);
    color: var(--primary-navy);
}

.form-group input {
    padding: 0.875rem;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-md);
    font-family: var(--font-family);
    font-size: var(--font-size-base);
    transition: var(--transition);
}

.form-group input:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(0, 115, 183, 0.1);
}

.btn-submit {
    width: 100%;
    margin-top: var(--spacing-sm);
    position: relative;
}

.btn-submit.loading .btn-text {
    opacity: 0;
}

.btn-submit.loading .btn-loader {
    opacity: 1;
}

.btn-loader {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: var(--white);
    border-radius: 50%;
    animation: spin 0.6s linear infinite;
    opacity: 0;
}

@keyframes spin {
    to {
        transform: translate(-50%, -50%) rotate(360deg);
    }
}

.form-message {
    padding: var(--spacing-sm);
    border-radius: var(--radius-md);
    font-weight: 600;
    text-align: center;
    font-size: var(--font-size-sm);
    display: none;
}

.form-message.success {
    display: block;
    background: #D1FAE5;
    color: #065F46;
}

.form-message.error {
    display: block;
    background: #FEE2E2;
    color: #991B1B;
}

/* ==========================================
   Footer
   ========================================== */

.footer {
    background: var(--primary-navy);
    color: var(--white);
    padding: var(--spacing-xl) 0 var(--spacing-lg);
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-lg);
}

.footer-section h4 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-md);
}

.footer-logo {
    height: 50px;
    margin-bottom: var(--spacing-sm);
    filter: brightness(0) invert(1);
}

.footer-tagline {
    font-weight: 600;
    font-style: italic;
    color: var(--primary-orange);
    margin-bottom: var(--spacing-sm);
}

.footer-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--font-size-sm);
    line-height: 1.7;
}

.footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.footer-links a {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--font-size-sm);
}

.footer-links a:hover {
    color: var(--white);
}

.social-links {
    display: flex;
    gap: var(--spacing-sm);
}

.social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    transition: var(--transition);
}

.social-link:hover {
    background: var(--primary-blue);
}

.social-link svg {
    width: 20px;
    height: 20px;
}

.contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.contact-info li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--font-size-sm);
}

.contact-info svg {
    width: 18px;
    height: 18px;
}

.contact-info a {
    color: rgba(255, 255, 255, 0.8);
}

.contact-info a:hover {
    color: var(--white);
}

.footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--spacing-md);
    text-align: center;
}

.footer-bottom p {
    color: rgba(255, 255, 255, 0.6);
    font-size: var(--font-size-sm);
}

.footer-made-with {
    margin-top: 0.5rem;
}

/* ==========================================
   Responsive Design
   ========================================== */

@media (max-width: 968px) {
    .hero-title {
        font-size: var(--font-size-4xl);
    }

    .about-content,
    .join-content {
        grid-template-columns: 1fr;
    }

    .about-stats {
        grid-template-columns: 1fr;
    }

    .activities-grid {
        grid-template-columns: 1fr;
    }

    .nav-links {
        position: fixed;
        top: 68px;
        left: 0;
        right: 0;
        background: var(--white);
        flex-direction: column;
        padding: var(--spacing-md);
        box-shadow: var(--shadow-lg);
        transform: translateX(-100%);
        transition: var(--transition);
    }

    .nav-links.active {
        transform: translateX(0);
    }

    .mobile-menu-toggle {
        display: flex;
    }

    .mobile-menu-toggle.active span:nth-child(1) {
        transform: rotate(45deg) translate(6px, 6px);
    }

    .mobile-menu-toggle.active span:nth-child(2) {
        opacity: 0;
    }

    .mobile-menu-toggle.active span:nth-child(3) {
        transform: rotate(-45deg) translate(6px, -6px);
    }
}

@media (max-width: 640px) {
    .hero-title {
        font-size: var(--font-size-3xl);
    }

    .hero-logo img {
        height: 80px;
    }

    .section-title {
        font-size: var(--font-size-3xl);
    }

    .hero-buttons {
        flex-direction: column;
        width: 100%;
    }

    .btn {
        width: 100%;
    }

    .about-visual {
        grid-template-columns: 1fr;
    }

    .footer-content {
        grid-template-columns: 1fr;
    }
}

/* ==========================================
   Utility Classes
   ========================================== */

.text-center {
    text-align: center;
}

*:focus-visible {
    outline: 2px solid var(--primary-blue);
    outline-offset: 2px;
}
